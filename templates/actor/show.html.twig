{% extends 'base.html.twig' %}

{% block title %}{{ actor.name }} - Acteurs{% endblock %}

{% block body %}
<h2>{{ actor.name }}</h2>
<ul>
    {% for program in actor.programs %}
    <li><a href="{{ path('program_by_id', {id : program.id}) }}">{{ program.title }}</a></li>
    {% else %}
    <li>Aucune série à afficher.</li>
    {% endfor %}
</ul>
<a href="{{ path('actor_index') }}">Retour à la liste des acteurs</a>
{% endblock %}